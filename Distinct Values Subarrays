#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define all(x) x.begin(), x.end()
#define endl '\n'
void solve() {

     ll n , k,cnt=0,left=0; cin >> n;
     vector<ll>a(n); for(auto &it: a) cin >>it;
      map<ll,ll>mp;
     for(ll i=0;i<n;i++){
          mp[a[i]]++;
         while(mp[a[i]]>1){
            mp[a[left]]--;
            if(mp[a[left]]==0){
                mp.erase(a[left]);
            }
            left++;
         } 
         cnt +=(i-left+1);
     }

   

      cout << cnt << endl;


       

}

signed main() {
    ios_base::sync_with_stdio(false);
    cin.tie(0);
    int t = 1;
   // cin >> t;
    while (t--) solve();
    return 0;
}
